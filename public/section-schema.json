{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "public_updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "details": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "body": {
          "type": "string"
        },
        "section_id": {
          "type": "string"
        },
        "manual": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "title": {
              "type": "string"
            },
            "slug": {
              "type": "string"
            }
          },
          "required": [
            "title",
            "slug"
          ]
        },
        "breadcrumbs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "section_id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              }
            },
            "required": [
              "section_id",
              "title"
            ]
          }
        },
        "child_section_groups": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "title": {
                "type": "string"
              },
              "child_sections": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "section_id": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "section_id",
                    "title"
                  ]
                }
              }
            },
            "required": [
              "child_sections"
            ]
          }
        }
      },
      "required": [
        "section_id",
        "manual"
      ]
    },
    "update_type": {
      "type": "string",
      "enum": ["major", "minor"]
    }
  },
  "required": [
    "title",
    "public_updated_at",
    "details",
    "update_type"
  ]
}
